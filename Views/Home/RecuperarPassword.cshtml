    <div class="container no-padding">
        <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 no-padding">
            
            <div>
                <div class="row">
                        <div class="col-lg-12">    
                            <h2>Recuperar Contraseña</h2>
                            <hr />
                        </div>
                </div>
                @using (Html.BeginForm("RecuperarPassword", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })) 
                {
                    
                     @Html.Hidden("IdUsuarioEncrypt",HttpUtility.UrlEncode(MvcApplication4.Controllers.Funciones.Encrypt(Model.IdUsuario.ToString())))


                    <div class="row">
                        <div class="col-lg-12">    
                        @Html.LabelFor(model => model.Password, "Nueva Contraseña")
                        @Html.PasswordFor(model => model.Password, new { @class = "le-input", placeholder="Contraseña" })
                        @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div><!-- /.field-row -->
                    
                    
                    <div class="row margin-top">
                            <div class="col-lg-12">    
                            @Html.LabelFor(model => model.ConfirmPassword, "Confirmar Contraseña")
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "le-input", placeholder="Contraseña" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            </div>
                        </div><!-- /.field-row -->
                    
                            
                    <div class="row margin-top">
                        <div class="col-lg-12">  
                        <input class="le-button" type="submit" value="Enviar" onclick="javascript: ga('send', 'event', 'BotonRecuperarPassword', 'click', 'Recuperar password');" />
                            </div>
                    </div>
                }
