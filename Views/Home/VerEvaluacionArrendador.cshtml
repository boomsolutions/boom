<div class="container">
    <h2>Evaluación realizada al propietario</h2>
    <hr />
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
            @if (Model.Producto.Usuario.FotosUsuarios.Count() > 0)
            {
                
                <div style="background-image:url(@Url.Content(Model.Producto.Usuario.FotosUsuarios.First().Imagen.RutaFoto))" class="eval-user-image"  ></div>                   
            }
            else
            {
                <div style="background-image:url(@Url.Content("~/assets/images/default-avatar.jpg"))" class="eval-user-image"  ></div>                   
            }
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 margin-top">
            <label>@Model.Producto.Usuario.Nombre @Model.Producto.Usuario.Apellido te ha prestado <a href="@Url.Content("~/Home/Details/" + HttpUtility.UrlEncode(MvcApplication4.Controllers.Funciones.Encrypt(Model.Producto.IdProducto.ToString()))).ToString().Replace("%","%25")">@Model.Producto.Nombre</a>.<br/>Desde el @Model.FechaDesde.ToLongDateString() hasta el @Model.FechaHasta.ToLongDateString()</label>
        </div>
    </div>
        
    <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12 eval-detail">
            
        <div>
                
            
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.ComentarioExperienciaArrendador,"Describe tu experiencia")
                    <p>@Html.DisplayFor(model => model.ComentarioExperienciaArrendador)</p>
                    </div>
                </div><!-- /.field-row -->

                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.ComentarioPrivadoArrendador, "Comentario privado para el usuario")
                    <p>@Html.DisplayFor(model => model.ComentarioPrivadoArrendador)</p>
                </div>
                </div><!-- /.field-row -->

                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <label>Cuidado</label>
                        <div class="star-holder margin-top">
                            <div class="star-disable big" data-score="@Model.CalificacionCuidadoArrendador"></div>
                        </div>
                                

                    </div>
                </div><!-- /.field-row -->
            <br />
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <label>Comunicacion</label>
                        <div class="star-holder margin-top">
                            <div class="star-disable big" data-score="@Model.CalificacionComunicacionArrendador"></div>
                        </div>
                                

                    </div>
                </div><!-- /.field-row -->
            <br />
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <label>Cumplimiento de las normas</label>
                        <div class="star-holder margin-top">
                            <div class="star-disable big" data-score="@Model.CalificacionCumplimientoNormasArrendador"></div>
                        </div>
                                

                    </div>
                </div><!-- /.field-row -->
            <br />
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <label>¿Recomendarias a este propietario?</label>
                        @if (Model.CalificacionPositivaArrendador)
                        {
                            <label>SI</label>
                        }    
                        else
                        {
                            <label>NO</label>
                        }

                    </div>
                </div><!-- /.field-row -->

                    

            
        </div><!-- /.billing-address -->

    </div><!-- /.col -->
</div><!-- /.container -->    
