                    </div>
                    <div class="col-xs-12 col-sm-2 no-margin">
                        
                        @Html.ActionLink("Editar", "EditProduct", new { id = p1.IdProducto }, new { @class = "le-button" })
                        
                    </div>
                </div><!-- /.cart-item -->

            }

            
        </div>
