                        </div>
                        
                        
                    </div>
                    <div class="col-xs-12 col-sm-1 no-margin">
                        
                        <div class="price">
                          
                            mensual: $@p1.PrecioMensual
                        </div>
                       
                    </div>

                    <div class="col-xs-12 col-sm-1 no-margin">
                        @using (Html.BeginForm("DeleteProductConfirmed/" + p1.IdProducto, "Home", FormMethod.Post))
