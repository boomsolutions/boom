<section id="checkout-page">
    <div class="container">
        <div class="col-md-3 no-margin">
        </div>
        <div class="col-md-6 no-margin">
            
            <div class="billing-address">
                <h2 class="border h1">Suscríbete al boletín informativo</h2>
                @using (Html.BeginForm("CreateSuscriptor2", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })) 
                    {
					    <div class="row field-row">
                            <div class="col-xs-12">
                            <label for="Nombre" >Nombre</label>
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "le-input", placeholder="Nombre"})
                            @Html.ValidationMessageFor(model => model.Nombre)
                        </div>
                        </div><!-- /.field-row -->

                        <!-- /.field-row -->

                    
                        <div class="row field-row">
                            <div class="col-xs-12">
                            <label for="Email" >E-mail</label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "le-input", placeholder="Email" })
                            @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div><!-- /.field-row -->
                        
                    <div class="row field-row">
                            
                            <div class="col-xs-12">
                                <label for="FechaNacimiento">Fecha de Nacimiento</label>
                                @Html.DropDownList("ListaDias", null, new { @class = "le-input", style="width: 14%" })
                                
                                @Html.DropDownList("ListaMeses", null, new { @class = "le-input", style="width: 14%" })
                                
                                @Html.DropDownList("ListaAnios", null, new { @class = "le-input", style="width: 18%" })
                                <br />
                                @Html.ValidationMessage("FechaNacimiento")
                            </div>
                        </div><!-- /.field-row -->
                    
                        <div class="row field-row">
                            <div class="col-xs-12">
                                <label for="IdDepartamento" >Departamento</label>
                                @Html.DropDownList("IdDepartamento", null, "Selecciona un departamento", new { @class = "le-input", onchange = "javascript:CambioDeptos(this);" })
                                <br />
                                @Html.ValidationMessageFor(model => model.IdDepartamento)
                            </div>
                        </div><!-- /.field-row -->
                    <div class="row field-row" id="DIVBarrio" hidden="true">
                            <div class="col-xs-12">
                                <label for="IdBarrio">Barrio</label>
                                @Html.DropDownList("IdBarrio", null,"Selecciona un barrio", new { @class = "le-input", style="width: 50%;" })
                                <br />
                                @Html.ValidationMessageFor(model => model.IdBarrio)
                            </div>
                        </div><!-- /.field-row -->
                        
                    
                        <br/>
                        <div class="place-order-button text-left" >
                            <input class="le-button big" type="submit" value="Suscríbete" onclick="javascript: ga('send', 'event', 'BotonSuscripcionLanding', 'click', 'Suscriptores desde la landing', 1);" />
                        </div>
                    }
            </div><!-- /.billing-address -->

        </div><!-- /.col -->
    </div><!-- /.container -->    
</section><!-- /#checkout-page -->
