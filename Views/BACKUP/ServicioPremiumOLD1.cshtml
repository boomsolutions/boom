<section id="checkout-page">
    <div class="container reg">
        <div class="col-xs-12 no-margin">
            
            <div class="billing-address">
                <h2 class="border h1">Formulario</h2>
                @using (Html.BeginForm("ServicioPremium", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "FormSP" }))
                {
                    
                    
                    <div class="row field-row" id="titulos">
                        <div class="col-md-2 col-sm-12 col-xs-12">
                            @Html.LabelFor(model => model.IdCategoriaProducto, "Categoría")
                          
                        </div>

                         <div class="col-md-2 col-sm-12 col-xs-12">
                            @Html.LabelFor(model => model.Marca, "Marca/Modelo")
                          
                        </div>

                        <div class="col-md-2 col-sm-12 col-xs-12">

                            @Html.LabelFor(model => model.Descripcion)
                          
              
                        </div>

                        <div class="col-md-1 col-sm-12 col-xs-12">

                            @Html.LabelFor(model => model.Cantidad)
                          
              
                        </div>

                        <div class="col-md-2 col-sm-12 col-xs-12">
                            @Html.LabelFor(model => model.Estado, "Estado")
                          
                        </div>

                        <div class="col-md-1 col-sm-12 col-xs-12">
                            @Html.LabelFor(model => model.PrecioEstimadoActual, "Precio estimado")
                            
                        </div>
                        <div class="col-md-1 col-sm-12 col-xs-12">
                            @Html.LabelFor(model => model.PrecioCompra, "Precio compra")
                            
                        </div>
                        
                        <div class="col-md-1 col-sm-12 col-xs-12">
                            @Html.LabelFor(model => model.TiempoVidaUtil, "Vida util (años)")
                          
                        </div>

                        
                    </div><!-- /.field-row -->
                    
                    <div id="FormROWS">
                    
                    <div class="row field-row" id="row1">
                        <div class="col-md-2 col-sm-12 col-xs-12">
                          
                            @Html.DropDownList("IdCategoriaProducto", null, new { @class = "le-input" })
                            @Html.ValidationMessageFor(model => model.IdCategoriaProducto)
                        </div>

                         <div class="col-md-2 col-sm-12 col-xs-12">
                           
                            @Html.TextBoxFor(model => model.Marca, new { @class = "le-input", placeholder = "Marca/Modelo" })
                            @Html.ValidationMessageFor(model => model.Marca)
                        </div>

                        <div class="col-md-2 col-sm-12 col-xs-12">

                            @Html.TextAreaFor(model => model.Descripcion, new { @class = "le-input", style="height:41px" })
                            @Html.ValidationMessageFor(model => model.Descripcion)

              
                        </div>

                        <div class="col-md-1 col-sm-12 col-xs-12">

                            
                            @Html.TextBoxFor(model => model.Cantidad, new { @class = "le-input", type = "number" })
                            @Html.ValidationMessageFor(model => model.Cantidad)

              
                        </div>

                        <div class="col-md-2 col-sm-12 col-xs-12">
                            
                            @Html.DropDownList("Estado", null, new { @class = "le-input" })
                            @Html.ValidationMessageFor(model => model.Estado)
                        </div>

                        <div class="col-md-1 col-sm-12 col-xs-12">
                            
                            @Html.TextBoxFor(model => model.PrecioEstimadoActual, new { @class = "le-input", type = "number" })
                            @Html.ValidationMessageFor(model => model.PrecioEstimadoActual)
                            
                        </div>
                        <div class="col-md-1 col-sm-12 col-xs-12">
                            
                            @Html.TextBoxFor(model => model.PrecioCompra, new { @class = "le-input", type = "number" })
                            @Html.ValidationMessageFor(model => model.PrecioCompra)
                            
                        </div>
                        
                        <div class="col-md-1 col-sm-12 col-xs-12">
                            
                            @Html.TextBoxFor(model => model.TiempoVidaUtil, new { @class = "le-input", type = "number" })
                            @Html.ValidationMessageFor(model => model.TiempoVidaUtil)
                        </div>
