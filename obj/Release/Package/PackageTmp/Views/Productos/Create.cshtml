@model MvcApplication4.Models.Productos

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Productos</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nombre)
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descripcion)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Descripcion)
            @Html.ValidationMessageFor(model => model.Descripcion)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdCategoriaProducto, "CategoriasProducto")
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdCategoriaProducto", String.Empty)
            @Html.ValidationMessageFor(model => model.IdCategoriaProducto)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PrecioDiario)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PrecioDiario)
            @Html.TextBoxFor(model => model.PrecioDiario, new { type = "number" })
            @Html.ValidationMessageFor(model => model.PrecioDiario)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PrecioSemanal)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PrecioSemanal)
            @Html.TextBoxFor(model => model.PrecioSemanal, new { type = "number" })
            @Html.ValidationMessageFor(model => model.PrecioSemanal)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PrecioMensual)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PrecioMensual)
            @Html.TextBoxFor(model => model.PrecioMensual, new { type = "number" })
            @Html.ValidationMessageFor(model => model.PrecioMensual)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GarantiaDinero)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GarantiaDinero)
            @Html.TextBoxFor(model => model.GarantiaDinero, new { type = "number" })
            @Html.ValidationMessageFor(model => model.GarantiaDinero)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GarantiaExtra)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.GarantiaExtra)
            @Html.ValidationMessageFor(model => model.GarantiaExtra)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CondicionesUso)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.CondicionesUso)
            @Html.ValidationMessageFor(model => model.CondicionesUso)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdUsuario, "Usuarios")
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdUsuario", null, new { disabled="disabled"})
            @Html.ValidationMessageFor(model => model.IdUsuario)
        </div>

        <div>
            @Html.Partial("../Imagen/Create")

        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
