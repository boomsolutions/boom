@{ViewBag.Title = "Home Page";}

<h1>Busqueda de Producto</h1>

@using (Html.BeginForm("Index","Home",FormMethod.Get))
{    
         <p> Producto: @Html.TextBox("SearchString") <br />
             Categorias: @Html.DropDownList("Categorias")   
         <input type="submit" value="Filter" /></p> 
}




<table>
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Descripcion
        </th>
        <th>
            CategoriasProducto
        </th>
        <th>
            PrecioDiario
        </th>
        <th>
            PrecioSemanal
        </th>
        <th>
            PrecioMensual
        </th>
        <th>
            GarantiaDinero
        </th>
        <th>
            GarantiaExtra
        </th>
        <th>
            CondicionesUso
        </th>
        <th></th>
    </tr>

@foreach (var item in ViewData["Productos"] as List<MvcApplication4.Models.Productos>) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriasProducto.DescripcionI1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioDiario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioSemanal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioMensual)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GarantiaDinero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GarantiaExtra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CondicionesUso)
        </td>
        <td>@Html.ActionLink("Details", "Details", new { id=item.IdProducto })</td>
    </tr>
}

</table>
