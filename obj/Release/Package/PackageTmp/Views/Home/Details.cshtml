@model MvcApplication4.Models.Productos

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Productos</legend>

    <div class="display-label">Nombre</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Nombre)
    </div>

    <div class="display-label">Descripcion</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Descripcion)
    </div>

    <div class="display-label">CategoriasProducto</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CategoriasProducto.DescripcionI1)
    </div>

    <div class="display-label">PrecioDiario</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PrecioDiario)
    </div>

    <div class="display-label">PrecioSemanal</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PrecioSemanal)
    </div>

    <div class="display-label">PrecioMensual</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PrecioMensual)
    </div>

    <div class="display-label">GarantiaDinero</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.GarantiaDinero)
    </div>

    <div class="display-label">GarantiaExtra</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.GarantiaExtra)
    </div>

    <div class="display-label">CondicionesUso</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CondicionesUso)
    </div>

    <div class="display-label">Usuario Dueño</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Usuario.Nombre)
    </div>

    <div class="display-label">FOTOS</div>
    <div class="display-field">
        @try
        {
            if (Model.FotosProductos.Count() > 0)
            {
                foreach (var f in Model.FotosProductos.ToList())
                {
                <img src="@f.Imagen.RutaFoto" />
                }
            }
        }
        catch { }
        
    </div>
</fieldset>
<p>
    @Html.ActionLink("Alquilar!!","Create", "Alquiler", new { id=Model.IdProducto }, null) - 
    @Html.ActionLink("Back to List", "Index")
</p>
